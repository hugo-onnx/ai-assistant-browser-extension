{
  "manifest_version": 3,
  "name": "watsonx Orchestrate Chat",
  "version": "1.0.0",
  "description": "Chat with IBM watsonx Orchestrate from your browser sidebar",
  "permissions": ["sidePanel", "storage"],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "192": "icons/icon192.png",
      "512": "icons/icon512.png"
    },
    "default_title": "Open watsonx Chat"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "192": "icons/icon192.png",
    "512": "icons/icon512.png"
  }
}