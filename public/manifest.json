{
  "manifest_version": 3,
  "name": "AI Assistant",
  "version": "1.0.0",
  "description": "A Chrome side panel AI assistant supporting OpenAI and Claude",
  "permissions": ["sidePanel", "storage"],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "192": "icons/icon192.png",
      "512": "icons/icon512.png"
    },
    "default_title": "AI Assistant"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "192": "icons/icon192.png",
    "512": "icons/icon512.png"
  }
}
